<div class="mt-4">
    <h3>Cập nhật khóa học</h3>

    <form method="post" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group mt-2">
            <label for="Name" >Name</label>
            <input name="name" type="text" class="form-control" value="{{course.name}}" id="Name" placeholder="Name">
        </div>
        <div class="form-group mt-2">
            <label for="description" >description</label>
            <textarea name="description" type="text" class="form-control"  id="description" placeholder="description">{{course.description}}</textarea>
        </div>
        <div class="form-group mt-2">
            <label for="videoID" >videoID</label>
            <input name="videoID" type="text" class="form-control" value="{{course.videoID}}" id="videoID" placeholder="videoID">
        </div>
        <div class="form-group mt-2">
            <label for="level" >level</label>
            <input name="level" type="text" class="form-control" value="{{course.level}}" id="level" placeholder="level">
        </div>
            <button type="submit" class="btn btn-primary mb-3 mt-4">Lưu lại</button>
    </form>
</div>